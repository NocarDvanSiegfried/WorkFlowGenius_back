# Production Environment Variables for Backend
# Copy this file to .env.prod and fill in actual values

# Flask Configuration
FLASK_ENV=production
FLASK_APP=wsgi:app
# Generate a strong secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=YOUR_SECRET_KEY_HERE

# JWT Configuration
# Generate a strong JWT secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_HERE
# Token expiration time in seconds (default: 3600 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database Configuration
# PostgreSQL connection string for Flask
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@postgres:5432/YOUR_DB_NAME
# PostgreSQL container configuration
POSTGRES_DB=YOUR_DB_NAME
POSTGRES_USER=YOUR_DB_USER
# Use a strong password for production
POSTGRES_PASSWORD=YOUR_DB_PASSWORD

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# CORS Configuration
# Comma-separated list of allowed origins (e.g., https://yourdomain.com,https://www.yourdomain.com)
CORS_ORIGINS=https://YOUR_FRONTEND_DOMAIN

# Gunicorn Configuration
# Number of worker processes (recommended: (2 x CPU cores) + 1)
GUNICORN_WORKERS=4

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Security
# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=YOUR_BACKEND_DOMAIN

